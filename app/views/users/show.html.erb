<% provide(:title, @user.nickname) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <!--Profile_pic goes here-->
        <%= @user.nickname.upcase %>
      </h1>
      <!--Railsify this, ie put it in a separate view or erb file-->
      <%= render 'users/user_stats' %>
      <%= button_to "Refresh", {:action => "update"}, {:class => "btn btn-inverse", :method => "put"} %>
      <p><%= @printer %></p>
    </section>
  </aside>

  <div class="span9">
    <h4>Recent Match Stats</h4>
      <% if @user.match_stats.any? %>
        <table class="table table-condensed match_stats">
          <%= render @match_stats, :player => @player%>
        </table>
        <%= will_paginate @match_stats %>
      <% end %>
  </div>
</div>