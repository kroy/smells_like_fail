<% provide(:title, @user.nickname) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <!--Profile_pic goes here-->
        <%= @user.nickname.upcase %>
      </h1>
      <% stat_fields = acct_stats_for(@user.nickname) %>
      <% stat_fields.each do |field| %>
      		<p><%=field[0]%> : <%=field[1]%></p>
      <% end %>
    </section>
  </aside>
</div>

<% User.order("nickname ASC").all.each do |user| %>
	<p><%= link_to user.nickname, users_path(user.id) %></p>
<%end%>
